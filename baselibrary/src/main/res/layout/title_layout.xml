<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mViewRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.he.baselibrary.view.ViewStatus
        android:id="@+id/mViewStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/mRoot"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/mViewStatus"
        android:background="@color/color_ffffff">

        <ImageView
            android:id="@+id/mImgBack"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:padding="14dp"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/mTvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="@color/color_343434"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/mImgIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimens_16_dp"
            android:padding="14dp" />

    </RelativeLayout>

    <View
        android:id="@+id/mViewLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/mRoot"
        android:background="@color/color_f4f4f4" />
</RelativeLayout>